@section CustomJs{
    <script>
        window.onload = function () {
            var app = new Vue({
                el: "#div_VCusAndCusOrderAndClv",
                data: {
                    cname: "",
                    index: 1,
                    size: 3,
                    resource: {}
                },
                created: function () {
                    this.LoadPage();
                },
                methods: {
                    LoadPage: function () {
                        this.$http.get("http://localhost:50086/api/public/GetV_CusAndCusOrderAndClvUponCondtionAndPage", {
                            params: {
                                name: this.cname == "" ? "输入名称" : this.cname,
                                index: this.index,
                                size: this.size
                            }
                        }).then(d => {
                            this.resource = d.data;
                        });
                    },
                    go: function () {
                        this.LoadPage();
                    },
                    find: function () {
                        this.LoadPage();
                    }
                }
            })
        }
    </script>
}
