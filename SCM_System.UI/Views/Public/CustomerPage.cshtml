@section CustomJs{
    <script>
        window.onload = function () {
            var app = new Vue({
                el: "#div_cts",
                data: {
                    cname: "",
                    level: 0,
                    index: 1,
                    size: 3,
                    resource: {},
                    cllist:[]
                },
                created: function () {
                    this.LoadPage();
                    this.LoadLevel();
                    
                },
                methods: {
                    LoadPage: function () {
                        this.$http.get("https://localhost:50086/api/public/GetCustomersUponConditionPage", {
                            params: {
                                cname: this.cname == "" ? "输入名称" : this.cname,
                                level: this.level,
                                index: this.index,
                                size: this.size
                            }
                        }).then(d => {
                            this.resource = d.data;
                        });
                    },
                    LoadLevel: function () {
                        this.$http.get("http://localhost:50086/api/public/GetCustomerLevelAll").then(d => {
                            this.cllist = d.data;
                        });
                    },
                    go: function () {
                        this.LoadPage();
                    },
                    find: function () {
                        this.LoadPage();
                    }
                }
            })
        }
    </script>
}
