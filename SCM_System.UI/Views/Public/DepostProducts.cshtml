@section CustomJs{
    <script>
        window.onload = function () {
            var app = new Vue({
                el: "#pro_count",
                data: {
                    cname: "",
                    level: 0,
                    index: 1,
                    size: 3,
                    resource: {},
                    cllist: []
                },
                created: function () {
                    this.LoadPage();
                    this.LoadLevel();
                },
                methods: {
                    LoadPage: function () {
                        this.$http.get("http://localhost:50086/api/public/GetVProductsAllAboutPageHaveCount", {
                            params: {
                                pname: this.cname == "" ? "输入名称" : this.cname,
                                plevel: this.level,
                                index: this.index,
                                size: this.size
                            }
                        }).then(d => {
                            this.resource = d.data;
                        });
                    },
                    LoadLevel: function () {
                        this.$http.get("http://localhost:50086/api/public/GetProductTypesAll").then(d => {
                            this.cllist = d.data;
                        });
                    },
                    go: function () {
                        this.LoadPage();
                    },
                    find: function () {
                        this.LoadPage();
                    }
                }
            })
        }
    </script>
}
