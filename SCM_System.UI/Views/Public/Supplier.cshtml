@section CustomJs{
    <script>
        window.onload = function () {
            var app = new Vue({
                el: "#div_pld",
                data: {
                    cname: "",
                    index: 1,
                    size: 3,
                    resource: {},
                },
                created: function () {
                    this.LoadPage();
                },
                methods: {
                    LoadPage: function () {
                        this.$http.get("http://localhost:50086/api/public/GetProductLendsAllAboutPage", {
                            params: {
                                name: this.cname == "" ? "输入名称" : this.cname,
                                index: this.index,
                                size: this.size
                            }
                        }).then(d => {
                            this.resource = d.data;
                        });
                    },
                    go: function () {
                        this.LoadPage();
                    },
                    find: function () {
                        this.LoadPage();
                    }
                }
            })
        }
    </script>
}
<div class="sub-heard-part">

    <h1>采购商列表</h1>
</div>
<div id="div_pld" class="graph">

    <div class="row">
        <form class="form-horizontal col-md-offset-3 col-md-6 col-md-offset-3">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">采购商名称:</label>
                <div class="col-sm-10">
                    <input type="text" v-model="cname" class="form-control" id="txtBkName" @*v-model="RowData.BkName" *@ placeholder="输入名称">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="butAdd" type="button" @@click="find()" class="btn btn-default">查询</button>
                </div>
            </div>
        </form>
    </div>
    <hr />
    <div class="tables row">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>
                        选择
                    </th>
                    <th>
                        供应商编号
                    </th>
                    <th>
                        供应商名称
                    </th>
                    <th>
                        公司名称
                    </th>
                    <th>
                        联系人
                    </th>
                    <th>
                        联系电话
                    </th>
                    <th>
                        地址
                    </th>
                </tr>

            </thead>
            <tbody>
                <tr v-for="(o,i) in resource.ls">
                    <td>
                        <input type="checkbox" />
                    <td>
                        {{o.PPID}}
                    </td>
                    <td>
                        {{o.PPName}}
                    </td>
                    <td>
                        {{o.PPCompany}}
                    </td>
                    <td>
                        {{o.PPMan}}
                    </td>
                    <td>
                        {{o.PPTel}}
                    </td>
                    <td>
                        {{o.PPAddress}}
                    </td>
                </tr>
            </tbody>
        </table>
        <div align="center">
            <my-page @@change="go()"
                     :total="resource.total"
                     :size="size"
                     v-model="index"></my-page>
        </div>
    </div>
</div>
